<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>Bls Web Application</display-name>
    <welcome-file-list>
        <welcome-file>jsp/index.html</welcome-file>
    </welcome-file-list>
    <servlet>
        <servlet-name>bls</servlet-name>
        <servlet-class>it.unibo.devices.web.BlsServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>bls</servlet-name>
        <url-pattern>/on</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bls</servlet-name>
        <url-pattern>/off</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>bls</servlet-name>
        <url-pattern>/show</url-pattern>
    </servlet-mapping>
     <servlet-mapping>
        <servlet-name>bls</servlet-name>
        <url-pattern>/switch</url-pattern>
    </servlet-mapping>
 </web-app>